<%# Value name default %>
<%# If name isn't defined, is created with "Crear" %>
<% name ||= "Crear" %> 
<h1> <%= name %> artículo</h1>
<%= form_for(@article) do |f|%>
	<%# Show errors to user %>
	<% @article.errors.full_messages.each do |message| %> 
		<div class="be-red white top-space">
			* <%= message %>
		</div>
	<% end %>
	<div class="field">
		<%= f.text_field :title, placeholder:"Título", class:"form-control" %>
	</div>
	<div class="field">
		Portada: <%= f.file_field :cover %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder:"Escribe aquí el articulo", style: "height:300px;", class:"form-control" %>
	</div>
	<div class="field">
		<label for="">Categorias</label>
		<% @categories.each do |category| %>
			<%= category.name %>
		<% end %>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white" %>
	</div>
<% end %>