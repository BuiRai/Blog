<article class="bottom-space">
	<!--The article_cover is a helper, see the folder application_helper-->
	<%= article_cover @article.cover.url %>
	<div class="row center-xs">
		<div class="col-xs-12 light-border col-md-7">
			<h1 class="be-big blue">
				<%= @article.title %>
			</h1>
			<p class="text-right be-small">
				<%= link_to "AtrÃ¡s", articles_path, clas:"underline" %>
				<span class="red"><%= @article.visits_count %> visita(s)</span>
				-
				<% unless @article.user.nil?%>
					Escrito por: <%= @article.user.email %>
				<% end %>
			</p>
			<div class="text-justify">
				<!--To show the body in HTML just use: html_safe
				Sanitize::Config::RELAXE: Allows an even wider variety of markup, including images and tables, as well as safe CSS. Links are still limited to FTP, HTTP, HTTPS, and mailto protocols, while images are limited to HTTP and HTTPS. In this mode, rel="nofollow" is not added to links.-->
					
				<%= Sanitize.fragment(@article.body, Sanitize::Config::RELAXED).html_safe %>
			</div>

			<div class="top-space">
				<%= render "articles/comments" %>
			</div>
		</div>
	</div>
</article>